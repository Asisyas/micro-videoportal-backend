<?xml version="1.0"?>
<dto xmlns="micro:dto-01"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="micro:dto-01 https://raw.githubusercontent.com/Micro-PHP/dto/master/src/Resource/schema/dto-01.xsd">

    <class name="Video\Video">
        <property name="id" type="string" required="true"/>
        <property name="name" type="string" required="true" />
        <property name="created_at" type="datetime" required="true"/>
        <property name="media" type="Video\Source" />
    </class>

    <class name="Video\VideoCreate">
        <property name="file_id" type="string" required="true" />
    </class>

    <class name="Video\ResolutionSimple">
        <property name="file" type="string" />
        <property name="resolution" type="string"/>
    </class>

    <class name="Video\Resolution">
        <property name="height" type="int" required="true"/>
        <property name="width" type="int" required="true"/>
        <property name="bitRateMin" type="int"/>
        <property name="bitRateMax" type="int"/>
        <property name="frameRate" type="int"/>
        <property name="media_type_flag" type="bool" />
    </class>

    <class name="Video\VideoGet">
        <property name="video_id" type="string" required="true"/>
    </class>

    <class name="Video\SourceSet">
        <property name="video" type="Video\Video" />
        <property name="src" type="string" />
    </class>

    <class name="Video\Source">
        <property name="src" type="string" />
    </class>
</dto>