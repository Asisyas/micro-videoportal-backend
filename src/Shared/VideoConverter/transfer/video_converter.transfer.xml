<?xml version="1.0"?>
<dto xmlns="micro:dto-01"
     xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
     xsi:schemaLocation="micro:dto-01 https://raw.githubusercontent.com/Micro-PHP/dto/master/src/Resource/schema/dto-01.xsd">

    <class name="VideoConverter\VideoConvert">
        <property name="file" type="File\File" required="true"/>
        <property name="meta" type="VideoConverter\VideoMetadata" />
        <property name="resolution" type="VideoConverter\Resolution" required="true"/>
    </class>

    <class name="VideoConverter\VideoConvertCollection">
        <property name="items" type="VideoConverter\VideoConvert" is_collection="true" required="true"/>
    </class>

    <class name="VideoConverter\VideoConvertResult">
        <property name="path" type="string" required="true"/>
        <property name="resolution" type="VideoConverter\Resolution" required="true"/>
    </class>

    <class name="VideoConverter\ResolutionCollection">
        <property name="resolutions" type="VideoConverter\Resolution" is_collection="true"/>
    </class>

    <class name="VideoConverter\Resolution">
        <property name="height" type="int" required="true"/>
        <property name="width" type="int" required="true"/>
        <property name="fps" type="int" required="true" />
        <property name="bitRate" type="int"/>
        <property name="frameRate" type="int"/>
    </class>

    <class name="VideoConverter\VideoMetadata">
        <property name="format" type="string" />
        <property name="streamVideo" type="VideoConverter\StreamVideo"/>
        <property name="streamAudio" type="VideoConverter\StreamAudio"/>
    </class>

    <class name="VideoConverter\StreamVideo">
        <property name="codec" type="string" />
        <property name="height" type="int"/>
        <property name="width" type="int" />
        <property name="bitRate" type="int" />
        <property name="frameRate" type="int" />
        <property name="duration" type="float" />
    </class>

    <class name="VideoConverter\StreamAudio">
        <property name="codec" type="string"/>
        <property name="rate" type="int" />
        <property name="channelCount" type="int" />
        <property name="channelLayout" type="string"/>
    </class>

</dto>